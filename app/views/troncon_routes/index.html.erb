<% provide(:title, 'Tronçons') %>
<section>
  <div class="container">
    <div class="page-header">
      <div class="container center">
        <h3 class="session">Liste des tronçons</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <p id="notice"><%= notice %></p>

        <h1>Listing Troncon Routes</h1>

        <table>
          <thead>
          <tr>
            <th>Vocation</th>
            <th>Nb chausse</th>
            <th>Nb voies</th>
            <th>Etat</th>
            <th>Acces</th>
            <th>Res vert</th>
            <th>Sens</th>
            <th>Res europe</th>
            <th>Num route</th>
            <th>Class adm</th>
            <th>Longueur</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @troncon_routes.each do |troncon_route| %>
              <tr>
                <td><%= troncon_route.vocation %></td>
                <td><%= troncon_route.nb_chausse %></td>
                <td><%= troncon_route.nb_voies %></td>
                <td><%= troncon_route.etat %></td>
                <td><%= troncon_route.acces %></td>
                <td><%= troncon_route.res_vert %></td>
                <td><%= troncon_route.sens %></td>
                <td><%= troncon_route.res_europe %></td>
                <td><%= troncon_route.num_route %></td>
                <td><%= troncon_route.class_adm %></td>
                <td><%= troncon_route.longueur %></td>
                <td><%= link_to 'Montrer', troncon_route %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</section>
