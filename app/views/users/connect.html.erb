<% provide(:title, 'Sign in') %>
<%= render 'layouts/nav' %>
<section class="authentification">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-4 col-md-offset-4">
        <h1 class="text-center login-title">Se connecter pour continuer</h1>
        <div class="account-wall">
          <%= link_to image_tag('circle.jpg', :class => 'profile-img') %>
          <form class="form-signin">
            <input type="text" class="form-control" placeholder="Email" required autofocus>
            <input type="password" class="form-control" placeholder="Mot de passe" required>
            <button class="btn btn-lg btn-primary btn-block" type="Soumettre">
              Se connecter
            </button>
            <label class="checkbox pull-left">
              <input type="checkbox" value="remember-me">
              Se souvenir de moi
            </label>
            <a href="#" class="pull-right need-help">Besoin d'aide? </a><span class="clearfix"></span>
          </form>
        </div>
        <a href="#" class="text-center new-account">Cr√©er un compte </a>
      </div>
    </div>
  </div>
</section>
