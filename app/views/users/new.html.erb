<% provide(:title, 'Profil') %>
<div class="container">
  <div class="page-header">
    <div class="container center">
      <h3>Création du profil utilisateur</h3>
    </div>
  </div>
<h1></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>

          <%= render 'shared/error_users_messages' %>

          <%= f.label "Nom" %>
          <%= f.text_field :nom, class: 'form-control' %>

          <%= f.label "Prénom" %>
          <%= f.text_field :prenom, class: 'form-control' %>

          <%= f.label "Courriel" %>
          <%= f.text_field :email, class: 'form-control' %>

          <%= f.label "Poste" %>
          <%= f.select(:poste,
                       options_for_select([['Cadre', 1], ['Analyste', 2], ['Technicien', 3], ['Fournisseur', 4], ['Autre', 5]]),class: 'form-control' ) %>
          <%= f.label "Code employé" %>
          <%= f.text_field :codeEmploye, class: 'form-control' %>

          <%= f.label "Numéro de téléphone" %>
          <%= f.text_field :telephone, class: 'form-control' %>

          <%= f.submit "Créer profil", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>