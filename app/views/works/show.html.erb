<% provide(:title, 'Travaux') %>
<section>
  <div class="container">
    <div class="page-header">
      <div class="container center">
        <h3 class="session">Visualisation</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">

        <p id="notice"><%= notice %></p>

        <p>
          <strong>Type:</strong>
          <%= @work.type_work %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @work.description %>
        </p>

        <p>
          <strong>Debut:</strong>
          <%= @work.debut %>
        </p>
        <% if @work.fin.nil? %>
            <p>Travaux en cours !</p>
        <% else %>
          <p>
            <strong>Fin:</strong>
            <%= @work.fin %>
          </p>
        <% end %>
        <p>
          <strong>Itervenant:</strong>
          <%= @work.intervenant %>
        </p>
        <%= link_to 'Ajouter marquage',{controller: 'marquages', action: 'new', id: @work}%>
        <%= link_to 'Ã‰diter', edit_work_path(@work) %> |
        <%= link_to 'Retour', works_path %>

      </div>
    </div>
  </div>
</section>
